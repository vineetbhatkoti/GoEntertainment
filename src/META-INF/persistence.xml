<?xml version="1.0" encoding="UTF-8" ?>

<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
<persistence-unit name="JSPProject" transaction-type="RESOURCE_LOCAL">
<class>com.DTO.Name</class>
<class>com.DTO.Songs</class>
<class>com.DTO.Movie</class>
<class>com.DTO.Order</class>
<class>com.DTO.Member</class>
<class>com.DTO.Admin</class>
<class>com.DTO.Customer_rep</class>
<class>com.DTO.Reserve_Song</class>
<class>com.DTO.Order_Song</class>
<class>com.DTO.Reserve_Movie</class>
<class>com.DTO.Order_Movie</class>


<properties>
<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/GoEntertainment" />
<property name="javax.persistence.jdbc.user" value="root" />
<property name="javax.persistence.jdbc.password" value="bell123" />

<!-- EclipseLink should create the database schema automatically -->
<property name="eclipselink.ddl-generation" value="create-tables" />
<property name="eclipselink.ddl-generation.output-mode"
value="database" />
</properties>

</persistence-unit>
</persistence>